# 设置支持 256 色
term screen-256color

# 开启背景擦除（让 Vim 清屏等更干净）
defbce on

# 启动时不要烦人的欢迎信息
startup_message off

# 默认终端编码
defutf8 on

# 终端滚动缓冲区大小（行数）
defscrollback 10000

# 设置状态栏
hardstatus on
hardstatus alwayslastline
hardstatus string "%{= kG}[ %H ] %{= kw}%?%-Lw%?%{= kW}%n*%f %t%?(%u)%?%{= kw}%?%+Lw%? %{= kG}%= %Y-%m-%d %c "

# 快捷键设置（类似 tmux）
bind r source ~/.screenrc
bind | split -v    # 垂直分屏
bind _ split -h    # 水平分屏
bind TAB focus     # 在 region 间切换
bind x remove      # 关闭当前 region

defwrap on

# 启动后自动打开两个 region 并分别运行命令（可选）
screen -t MAIN 0 bash
split -v
screen -t EDITOR 1 vim -u ~/.vimrc
focus
