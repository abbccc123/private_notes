# 设置支持 256 色
term xterm-256color

# 开启背景擦除（让 Vim 清屏等更干净）
defbce on

# 启动时不要烦人的欢迎信息
startup_message off

# 默认终端编码
defutf8 on

# 终端滚动缓冲区大小（行数）
defscrollback 10000

allpartial on

# 设置状态栏
hardstatus on
hardstatus alwayslastline
hardstatus string "%{= 0;6}[ %H ] %{= 0;7}%?%-Lw%?%n*%f %t%?(%u)%?%?%+Lw%? %= %{= 0;3} %Y-%m-%d %c "
#hardstatus string "%{= 0; 6}[%H] %{= 0; 7}%n %t %{-} %{= 0; 3}%Y-%m-%d %c"

# 快捷键设置（类似 tmux）
bind r source ~/.screenrc
bind | split -v    # 垂直分屏
bind _ split -h    # 水平分屏
bind TAB focus     # 在 region 间切换
bind x remove      # 关闭当前 region

defwrap on

